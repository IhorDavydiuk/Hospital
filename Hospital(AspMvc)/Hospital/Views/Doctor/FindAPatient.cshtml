@model IEnumerable<Hospital.Models.Patient>
@{
    ViewBag.Title = "Find a patient";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutpatientCard)
        </th>
        <th>
            @Html.DisplayName("Sickness count")
        </th>
    </tr>
    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutpatientCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sickness.Count)
            </td>
        </tr>
    }
</table>
